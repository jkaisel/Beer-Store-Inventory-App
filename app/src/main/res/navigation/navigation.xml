<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/navigation"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="android.example.beerstoreinventoryapp.screens.login.LoginFragment"
        android:label="LoginFragment" >
        <action
            android:id="@+id/action_loginFragment_to_welcomeFragment"
            app:destination="@id/welcomeFragment"
            app:enterAnim="@anim/fade_in"
            app:exitAnim="@anim/fade_out" />
    </fragment>
    <fragment
        android:id="@+id/welcomeFragment"
        android:name="android.example.beerstoreinventoryapp.screens.welcome.WelcomeFragment"
        android:label="WelcomeFragment" >
        <action
            android:id="@+id/action_welcomeFragment_to_informationFragment"
            app:destination="@id/instructionsFragment"
            app:enterAnim="@anim/slide_in_up"
            app:exitAnim="@anim/slide_out_up" />
    </fragment>
    <fragment
        android:id="@+id/instructionsFragment"
        android:name="android.example.beerstoreinventoryapp.screens.information.InstructionsFragment"
        android:label="InstructionsFragment">
        <action
            android:id="@+id/action_informationFragment_to_beerListFragment"
            app:destination="@id/beerListFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/beerListFragment"
        android:name="android.example.beerstoreinventoryapp.screens.list.BeerListFragment"
        android:label="BeerListFragment">
        <action
            android:id="@+id/action_beerListFragment_to_beerDetailFragment"
            app:destination="@id/beerDetailFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left" />
    </fragment>
    <fragment
        android:id="@+id/beerDetailFragment"
        android:name="android.example.beerstoreinventoryapp.screens.detail.BeerDetailFragment"
        android:label="BeerDetailFragment" >
        <action
            android:id="@+id/action_beerDetailFragment_to_beerListFragment"
            app:destination="@id/beerListFragment"
            app:enterAnim="@anim/slide_in_left"
            app:exitAnim="@anim/slide_out_right" />
    </fragment>
</navigation>